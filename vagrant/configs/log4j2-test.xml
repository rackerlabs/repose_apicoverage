<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <RollingFile name="RollingFile" fileName="/var/log/repose.log"
                     filePattern="/var/log/repose_%d{yyyy-MM-dd_HHmmss}.log">
            <PatternLayout pattern="%d %-4r [%t] %-5p %c  - %m%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="200 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="2"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="RollingFile"/>
        </Root>
        <Logger name="com.sun.jersey" level="off"/>
        <Logger name="net.sf.ehcache" level="error"/>
        <Logger name="org.apache.commons.httpclient" level="warn"/>
        <Logger name="org.eclipse.jetty" level="off"/>
        <Logger name="org.openrepose" level="debug"/>
        <Logger name="org.rackspace.deproxy" level="info"/>
        <Logger name="org.springframework" level="warn"/>
        <Logger name="intrafilter-logging" level="info"/>
    </Loggers>
</Configuration>
